<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="10dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#f0f0f0" />
            <size
                android:width="106dp"
                android:height="20dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item
        android:bottom="0dp"
        android:gravity="start|bottom"
        android:left="-5dp"
        android:top="0dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="135%"
            android:pivotY="15%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#f0f0f0" />
                <size
                    android:width="10dp"
                    android:height="10dp" />
            </shape>
        </rotate>
    </item>
</layer-list>